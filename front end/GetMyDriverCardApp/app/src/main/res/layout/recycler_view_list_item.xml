<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:todo_card="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/primaryColorBlue">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_shortcut_file_copy"
            todo_card:ignore="ContentDescription" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/request_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="90dp"
            android:textColor="@color/primaryLightColorAmber"
            android:textSize="20sp"
            android:textStyle="bold"
            todo_card:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/request_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="90dp"
            android:textColor="@color/primaryLightColorAmber"
            android:textSize="20sp"
            android:textStyle="bold"
            todo_card:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/request_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="90dp"
            android:textColor="@color/primaryLightColorAmber"
            android:textSize="20sp"
            android:textStyle="bold"
            todo_card:ignore="RtlSymmetry" />

    </LinearLayout>

</android.support.v7.widget.CardView>